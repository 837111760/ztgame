<event id="931" name="王城-不怕妹妹">
	<!--new means new quest, default is quest on user-->
	<quest id="931000">
		<embranchment id="1">
			<conditions>
				<level type="Great" value="30"/>
				<level type="Less" value="201"/>
				<uservar type="Less" name="npc_kill_times" value="50"/>
			</conditions>
			<actions>
				<menu>
function TaskDialog()
this:AddTalk("    您好，您今天的金子任务是攻击敌国160级的怪物100只，或者击败敌国王城的NPC。")
this:AddTaskCmdItem("接受敌国杀怪任务{10001}", "v931", 50003, 1)
this:AddTaskCmdItem("接受击败敌国王城NPC任务{10001}", "v931", 50006, 1)
end
				</menu>
			</actions>
		</embranchment>
		<embranchment id="100">
			<conditions>
				<uservar type="Equal" name="npc_kill_times" value="50"/>
			</conditions>
			<actions>
				<menu>
function TaskDialog()
this:AddTalk("    对不起,您今天的金子任务已经完成，请明天再来。")
this:AddCloseItem("离开")
end
				</menu>
			</actions>
		</embranchment>
	</quest>
	
	<quest id="50003" new="1">
		<embranchment id="1" active="1">
			<conditions>
				<level type="Great" value="30"/>
				<level type="Less" value="201"/>
			</conditions>
			<actions>
				<notify content="任务：杀敌国160级的怪物100只"/>
				<uservar type="Add" name="npc_kill_times" value="1"/>
				<var type="Set" name="state" value="1"/>
				<var type="Set" name="level" value="160"/>
				<var type="Set" name="min" value="160"/>
				<var type="Set" name="septid_kill_num" value="100"/>
				<refresh name="septid_kill_num"/>
				<refresh name="min"/>
			</actions>
		</embranchment>
	</quest>
	
	<quest id="50006" new="1">
		<embranchment id="1" active="1">
			<conditions>
				<level type="Great" value="30"/>
				<level type="Less" value="201"/>
			</conditions>
			<actions>
				<notify content="任务：屠杀敌国NPC"/>
				<uservar type="Add" name="npc_kill_times" value="1"/>
				<var type="Set" name="state" value="1"/>
			</actions>
		</embranchment>
	</quest>
</event>
